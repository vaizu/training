<div class="container">
  <div class="m-5">
    <div class="row mt-5 pt-5">
      <div class="col-12">
        <h1 class="text-center mb-0">RELEASE</h1>
        <p class="text-center">Kotoha&Hanon</p>
      </div>
    </div>
    <div class="row">
      <div class="d-flex flex-wrap col-12">
      <% @releases.each do |release| %>
      <div class="col-4 p-5 d-flex">
        <%= link_to release_path(release.id) do %>
            <div class="row">
              <%= image_tag release.release_image, class: "img3" if release.release_image .present? %>
            </div>
            <div class="row mt-3">
              <div class="col-12 text-center text-dark">
              <%= release.sub_title %>
              </div>
            </div>
            <div class="row">
              <div class="col-12 text-center text-dark">
              <%= release.main_title %>
              </div>
            </div>
        <% end %>
        </div>
      <% end %>
      </div>
      </div>
    </div>
</div>
